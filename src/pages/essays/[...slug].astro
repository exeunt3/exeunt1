---
import Base from "../../layouts/Base.astro";
const { Content, frontmatter } = await Astro.props;
---
<Base title={`${frontmatter.title} â€” Exeunt`} description={frontmatter.summary}>
  <article class="article">
    <div class="banner">{frontmatter.banner && <img src={frontmatter.banner} alt="" />}</div>
    <div class="eyebrow">{new Date(frontmatter.date).toLocaleDateString(undefined, { year:'numeric', month:'long', day:'numeric' })}</div>
